<% resource_cache(resource) do %>
<article>
  <div class='row-fluid'>
  <div class='span12'>
  <%= render_page_title(resource.title) %>
  </div>
</div>
<div class='row-fluid'>
  <div class='span12'>
	<%= render_slideshow_for(resource) %>
  </div>
</div>
<div class='row-fluid sale_property body'>
  <div class='span12'>
	<%= render_html_text(resource.body) %>
  </div>
</div>
<% if resource.lat_long.present? %>
<div class='row-fluid google_map_container hide-on-print'>
  <div class='span12'>
    <%= render('google_map', :point => resource.lat_long) %> 
  </div>
</div>
<% end %>
<div class='row-fluid sale_property inquiry hide-on-print'>  
  <div class='span12'>
    <h3 class='realty-partial'><%= t(:'realty.sale_inquiry_title') %></h3>
  </div>
  <div class='row-fluid'>
    <div class='span4'>
      <% if site.preferred_realty_agent_public && @sale_property.meta.realty_agent %>
        <%= render 'shared/realty_agent', :realty_agent => @sale_property.meta.realty_agent %>
      <% elsif site.preferred_contact_address.present? %>
        <p><small><%= site.preferred_contact_address.html_safe %></small></p>
      <% end %> 
    </div>
    <div class='span8'><%= render :partial => 'sale_property_inquiries/form' %></div>
  </div>  
</div>
<%#= render_next_previous %>
</article>
<% end %>