<article>
  <div class='row-fluid'>
  <div class='span12'>
  <%= render_page_title(resource.title) %>
  </div>
</div>
<div class='row-fluid'>
  <div class='span12'>
	<%= render_slideshow_for(resource) %>
  </div>
</div>
<div class='row-fluid annual_rental body'>
  <div class='span12'>
	<%= render_html_text(resource.body) %>
  </div>
</div>

<div class='row-fluid annual_rental inquiry hide-on-print'>  
  <div class='span12'>
    <h3 class='realty-partial'><%= t(:'realty.sale_inquiry_title') %></h3>
  </div>
  <div class='row-fluid'>
    <div class='span4'>
      <% if site.preferred_realty_agent_public && resource.meta.realty_agent %>
        <%= render 'shared/realty_agent', :realty_agent => resource.meta.realty_agent %>
      <% elsif site.preferred_contact_address.present? %>
        <p><small><%= site.preferred_contact_address.html_safe %></small></p>
      <% end %> 
    </div>
    <div class='span8'><%= render :partial => 'annual_rental_inquiries/form' %></div>
  </div>  
</div>
<%= render_next_previous %>
</article>

